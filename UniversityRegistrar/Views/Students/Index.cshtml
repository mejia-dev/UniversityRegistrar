@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
} 

@foreach (Student s in Model)
{
  <li>@Html.ActionLink($"{s.StudentName}", "Details", new { id = s.StudentId })</li>
  <p>@s.EnrollmentDate</p>
}

<p>@Html.ActionLink("Add new student", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>